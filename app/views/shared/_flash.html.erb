<!-- app/views/shared/_flash.html.erb -->
<% flash.each do |type, message| %>
  <% flash_class = type == "notice" ? "bg-green-100 text-green-800 border-green-200" : "bg-red-100 text-red-800 border-red-200" %>
  <div data-controller="flash" data-flash-dismiss-after-value="5000" class="mb-4 p-4 rounded-md border shadow-sm transition-opacity duration-300 <%= flash_class %>">
    <div class="flex justify-between items-center">
      <div class="flex items-center">
        <% if type == "notice" %>
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% else %>
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        <% end %>
        <%= message %>
      </div>
      <button data-action="flash#dismiss" class="text-gray-500 hover:text-gray-700">
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>
<% end %>
