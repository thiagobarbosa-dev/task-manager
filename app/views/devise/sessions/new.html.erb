<div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">
    <%= t('devise.sessions.new.title') %>
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %> <%# <<< Adiciona este data attribute %>
    <div class="mb-4">
      <%= f.label :email, t('devise.sessions.new.email'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-sm" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, t('devise.sessions.new.password'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 text-sm" %>
    </div>

    <div class="flex items-center justify-between mb-4">
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <% if devise_mapping.recoverable? %>
        <div class="text-sm">
          <%= link_to t('devise.sessions.new.forgot_password'), new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.submit t('devise.sessions.new.submit'), class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>

  <% if devise_mapping.registerable? %>
    <div class="text-center text-sm">
      <%= link_to t('devise.sessions.new.sign_up'), new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
</div>
