<!-- app/views/tasks/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6"><%= t('tasks.index.title', default: 'Minhas Tarefas') %></h1>
  
  <!-- Container para mensagens flash -->
  <div id="flash_container"></div>
  
  <!-- Formulário de criação de tarefa estilo Google Keep -->
  <div id="new_task">
    <%= render 'form', task: Task.new %>
  </div>
  
  <!-- Lista de tarefas existentes -->
  <div id="tasks" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
    <% if @tasks&.any? %>
      <%= render partial: "task", collection: @tasks %>
    <% else %>
      <div class="col-span-full text-center py-12">
        <p class="text-gray-500"><%= t('tasks.index.no_tasks', default: 'Nenhuma tarefa encontrada') %></p>
      </div>
    <% end %>
  </div>
</div>
