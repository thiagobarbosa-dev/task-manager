<%# app/views/tasks/update.turbo_stream.erb %>
<%= turbo_stream.replace "task_<%= @task.id %>", partial: "tasks/task", locals: { task: @task } %>
<%= turbo_stream.replace "new_task", partial: "tasks/form", locals: { task: Task.new } %>
<%= turbo_stream.append "flash_container", partial: "shared/flash_message", locals: { type: "notice", message: t("tasks.updated") } %>
